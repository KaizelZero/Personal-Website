---
const { title, subtitle, desc, date, location } = Astro.props;
---

<div class="flex">
	<div class="education__time">
		<span class="w-4 h-4 bg-primary block rounded-full mt-1"></span>
		<span
			class="education__line bg-primary block h-full w-[2px] translate-x-[7px]"
		></span>
	</div>
	<div class="experience__data bd-grid px-5">
		<h3 class="font-semibold mb-1 text-xl">
			{title}
			<span class="text-xs">{date}</span>
		</h3>
		<span class="mb-1 font-light text-sm">{subtitle}</span>

		{
			location && (
				<h5 class="mt-2 flex gap-2 items-center text-xs">
					<svg
						stroke="currentColor"
						fill="currentColor"
						stroke-width="0"
						viewBox="0 0 512 512"
						height="1em"
						width="1em"
						xmlns="http://www.w3.org/2000/svg"
					>
						<path d="M444.52 3.52L28.74 195.42c-47.97 22.39-31.98 92.75 19.19 92.75h175.91v175.91c0 51.17 70.36 67.17 92.75 19.19l191.9-415.78c15.99-38.39-25.59-79.97-63.97-63.97z" />
					</svg>
					<span>{location}</span>
				</h5>
			)
		}
		<p class="my-2 text-justify">
			{desc}
		</p>
	</div>
</div>
